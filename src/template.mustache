<html>
<head>
<style>
  body {
    font-family: monospace;
    background: rgb(200,200,225);
    color: rgb(30,30,30);
  }
  .container {
    display: flex;
    padding-top: 10px;
  }
  .container .sidebar {
    flex: 1;
    padding-right: 10px;
  }
  .container .main-content {
    flex: 3;
  }
  .section {
    margin-bottom: 20px;
  }
  .section > * {
    margin: 0;
  }
  dl, ul {
    margin-top: 0;
    margin-bottom: 0;
    margin-left: 10;
  }
  ul {
    list-style: square;
    padding-left: 5px;
  }
  dd {
    margin: 0;
  }
  .portrait {
    display: flex;
    justify-content: center;
    padding-right: 40px;
    margin-bottom: 10px;
  }
  .skills > dd {
   margin-bottom: 25px; 
  }
  .skills .skill-levels > dd {
    margin-bottom: 5px;
  }
  .basics .identity-contact {
    margin-top: 10px;
    margin-left: 5px;
    font-size: 11;
  }
  .identity .identity-label {
    font-size: 16px;
  }
</style>
</head>
<body>
<div class="container">
  <div class="main-content">

    <div class="works">
      {{#work}}
      <div class="work">
        <h3>{{name}}</h3>
      </div>
      {{/work}}
    </div>

    <div class="educations">
      {{#education}}
      <div class="education">
        <h3>{{institution}}</h3>
      </div>
      {{/education}}
    </div>

  </div>
  <div class="sidebar">

    <div class="basics">
      {{#basics}}

      <div class="portrait section">
        <img src={{image}} height=100 width=100 />
      </div>

      <div class="identity section">
        <h1>{{name}}</h1>
        <div class="identity-label">{{label}}</div>
        <div class="identity-contact">
          <div><a href="mailto:{{email}}">{{email}}</a></div>
          <div>{{phone}}</div>
          <div><a href={{url}}>github</a></div>
        </div>
      </div>

      {{/basics}}
    </div>

    <dl class="skills">
    {{#skills}}
      <dt>{{name}}</dt>
      <dd>
        <dl class="skill-levels">
        {{#levels}}
          <dt>{{name}}</dt>
          <dd>
            <ul>
            {{#items}}
              <li><strong>{{.}}</strong></li>
            {{/items}}
            </ul>
          </dd>
        {{/levels}}
        </dl>
      </dd>
    {{/skills}}
    </dl>

    <dl class="tools">
      <dt>Tools</dt>
      <dd>
        <ul>
        {{#tools}}
          <li><strong>{{.}}</strong></li>
        {{/tools}}
        </ul>
      </dd>
    </dl>

  </div>
</div>
</body>
</html>
